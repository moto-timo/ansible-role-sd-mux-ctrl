---

- name: "Install or Upgrade Pdudaemon Debian Package"
  become: true
  ansible.builtin.apt:
    deb: "{{ '/tmp/' + sdmuxctrl_package_name }}"
    state: present
    update_cache: true
  when: "not sdmuxctrl_is_upgraded"
  notify: "Pdudaemon has been installed or upgraded"
