---

- name: "Install Pdudaemon build dependencies"
  become: true
  ansible.builtin.apt:
    name: "{{ sdmuxctrl_build_dependencies }}"
    state: present
    update_cache: true
  when: "not sdmuxctrl_build_deps_are_installed"
  notify: "Pdudaemon build dependencies have been installed"
