---

- name: "Install Pdudaemon Runtime Dependencies"
  become: true
  ansible.builtin.apt:
    name: "{{ sdmuxctrl_runtime_dependencies }}"
    state: present
    update_cache: true
  when: "not sdmuxctrl_runtime_deps_are_installed"
  notify: "Pdudaemon runtime dependencies have been installed"
